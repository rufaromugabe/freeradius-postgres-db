# FreeRADIUS Environment Configuration
# Copy this file to .env and customize as needed

# PostgreSQL Database Configuration
POSTGRES_DB=radius
POSTGRES_USER=radius
POSTGRES_PASSWORD=radiuspassword

# Database connection for FreeRADIUS
DB_HOST=postgres
DB_PORT=5432
DB_NAME=radius
DB_USER=radius
DB_PASSWORD=radiuspassword

# REST API Configuration (optional)
# REST_API_URL=http://your-api-server:8080/api/radius

# FreeRADIUS Configuration
# Set to 'yes' to start in debug mode (-X)
RADIUS_DEBUG=no

# Timezone
TZ=UTC

# Network Configuration
RADIUS_AUTH_PORT=1812
RADIUS_ACCT_PORT=1813

# Docker network subnet
DOCKER_SUBNET=172.18.0.0/16